<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFrameworks>net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows')) and '$(MSBuildRuntimeType)' == 'Full'">$(TargetFrameworks);net6.0-windows10.0.19041</TargetFrameworks>
		<OutputType>Exe</OutputType>
		<RootNamespace>NebulaMobile</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<EnableDefaultCssItems>false</EnableDefaultCssItems>

		<!-- Display name -->
		<ApplicationTitle>NebulaMobile</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.NebulaMobile</ApplicationId>

		<!-- Versions -->
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Required for C# Hot Reload -->
		<UseInterpreter Condition="'$(Configuration)' == 'Debug'">True</UseInterpreter>

		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-ios'">14.2</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-maccatalyst'">14.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</TargetPlatformMinVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\appicon.svg" ForegroundFile="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />
	</ItemGroup>

	<PropertyGroup Condition="$(TargetFramework.Contains('-windows'))">
		<OutputType>WinExe</OutputType>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
	</PropertyGroup>

	<ItemGroup>
		<Content Remove="appsettings.json" />
		<Content Remove="Properties\launchSettings.json" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="appsettings.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <None Include="Platforms\Android\HTTPClientHandlerCreationService_Android.cs" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Blazored.LocalStorage" Version="4.1.5" />
	  <PackageReference Include="BlazorStyled" Version="3.1.0" />
	  <PackageReference Include="CoinGeckoAsyncApi" Version="1.5.0" />
	  <PackageReference Include="Converto" Version="2.1.0" />
	  <PackageReference Include="Fluxor.Blazor.Web" Version="4.2.1" />
	  <PackageReference Include="LiteDB" Version="5.0.11" />
	  <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="5.2.7" />
	  <PackageReference Include="Microsoft.AspNetCore.Components.Forms" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
	  <PackageReference Include="Microsoft.VisualStudio.Threading" Version="17.0.64" />
	  <PackageReference Include="MongoDB.Bson" Version="2.14.0" />
	  <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	  <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" />
	  <PackageReference Include="StreamJsonRpc" Version="2.9.85" />
	  <PackageReference Include="System.Reactive" Version="5.0.0" />
	  <PackageReference Include="System.Reactive.Linq" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup Condition="$(TargetFramework.Contains('-windows'))">
		<!-- Required - WinUI does not yet have buildTransitive for everything -->
	  <PackageReference Include="Microsoft.Graphics.Win2D" Version="1.0.0.30" />
	  <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
	</ItemGroup>
	
	<ItemGroup>
	  <Reference Include="Blazorise">
	    <HintPath>..\..\Blazorise\Source\Blazorise.Bootstrap5\bin\Debug\net6.0\Blazorise.dll</HintPath>
	  </Reference>
	  <Reference Include="Blazorise.Bootstrap5">
	    <HintPath>..\..\Blazorise\Source\Blazorise.Bootstrap5\bin\Debug\net6.0\Blazorise.Bootstrap5.dll</HintPath>
	  </Reference>
	  <Reference Include="Blazorise.Components">
	    <HintPath>..\..\Blazorise\Source\Extensions\Blazorise.Components\bin\Debug\net6.0\Blazorise.Components.dll</HintPath>
	  </Reference>
	  <Reference Include="Blazorise.DataGrid">
	    <HintPath>..\..\Blazorise\Source\Extensions\Blazorise.DataGrid\bin\Debug\net6.0\Blazorise.DataGrid.dll</HintPath>
	  </Reference>
	  <Reference Include="Blazorise.Icons.FontAwesome">
	    <HintPath>..\..\Blazorise\Source\Extensions\Blazorise.Icons.FontAwesome\bin\Debug\net6.0\Blazorise.Icons.FontAwesome.dll</HintPath>
	  </Reference>
	  <Reference Include="Blazorise.Snackbar">
	    <HintPath>..\..\Blazorise\Source\Extensions\Blazorise.Snackbar\bin\Debug\net6.0\Blazorise.Snackbar.dll</HintPath>
	  </Reference>
	  <Reference Include="Lyra.Data">
	    <HintPath>..\..\LyraNetwork\Core\Lyra.Data\bin\Debug\net6.0\Lyra.Data.dll</HintPath>
	  </Reference>
	  <Reference Include="lyra.shared">
	    <HintPath>..\..\LyraNetwork\Core\Lyra.Shared\bin\Debug\net6.0\lyra.shared.dll</HintPath>
	  </Reference>
	  <Reference Include="UserLibrary">
	    <HintPath>..\..\LyraNebula\UserLibrary\bin\Debug\net6.0\UserLibrary.dll</HintPath>
	  </Reference>
	</ItemGroup>
	
	<ItemGroup>
	  <_MauiCompileToAdd Remove="Platforms\Android\HTTPClientHandlerCreationService_Android.cs" />
	</ItemGroup>

</Project>
